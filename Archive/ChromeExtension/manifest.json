{
    "manifest_version": 2,
    "name": "URL Bundler",
    "description": "Bundle, Save & Share links with the world",
    "version": "1.0",
    "icons":{
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "permissions": [
        "tabs",
        "http://*/*", 
        "https://*/*"
    ],
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Bundle"
    }
}